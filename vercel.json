{
  "version": 2,
  "framework": "vite",
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist/public"
      }
    },
    {
      "src": "server/_core/index.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/trpc/(.*)", "dest": "/server/_core/index.ts" },
    { "src": "/api/(.*)", "dest": "/server/_core/index.ts" },
    { "src": "/(.*)", "dest": "/client/dist/public/$1" }
  ],
  "outputDirectory": "client/dist/public"
}
